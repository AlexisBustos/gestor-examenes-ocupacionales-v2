generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// Estructura Organizacional
// --------------------------------------

model Company {
  id               String            @id @default(uuid())
  rut              String            @unique
  name             String
  contactEmail     String
  address          String?
  phone            String?
  
  workCenters      WorkCenter[]
  examOrders       ExamOrder[]
  workers          Worker[]     
  users            User[]
  technicalReports TechnicalReport[]

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model WorkCenter {
  id        String   @id @default(uuid())
  name      String
  address   String?
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  areas     Area[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Area {
  id           String   @id @default(uuid())
  name         String
  workCenterId String
  workCenter   WorkCenter @relation(fields: [workCenterId], references: [id])
  gesGroups    Ges[]
  
  // RELACIÓN CON CENTRO DE COSTOS
  costCenterId String?
  costCenter   CostCenter? @relation(fields: [costCenterId], references: [id])

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// MODELO NUEVO: CENTRO DE COSTOS
model CostCenter {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  
  areas     Area[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --------------------------------------
// Gestión Documental
// --------------------------------------

model TechnicalReport {
  id           String   @id @default(uuid())
  reportNumber String
  reportDate   DateTime
  pdfUrl       String
  companyId    String
  company      Company  @relation(fields: [companyId], references: [id])
  gesGroups    Ges[]    
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// --------------------------------------
// Núcleo GES
// --------------------------------------

model Ges {
  id               String         @id @default(uuid())
  name             String
  reportDate       DateTime
  reportNumber     String
  menCount         Int
  womenCount       Int
  tasksDescription String?        @db.Text 
  machineryUsed    String?        @db.Text 
  controlMeasures  String?        @db.Text 
  subArea          String?
  
  validityYears    Int?
  nextEvaluationDate DateTime?
  risksResume      String?
  prescriptions    String?
  
  technicalReportId String?
  technicalReport   TechnicalReport? @relation(fields: [technicalReportId], references: [id])
  
  areaId           String
  area             Area           @relation(fields: [areaId], references: [id])
  riskExposures    RiskExposure[]
  workers          Worker[]       @relation("CurrentGes")
  examOrders       ExamOrder[]
  
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model RiskAgent {
  id            String         @id @default(uuid())
  name          String         @unique
  riskExposures RiskExposure[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

enum ExposureType {
  AGUDA
  CRONICA
  INTERMITENTE
  CONTINUA
}

model RiskExposure {
  id                   String        @id @default(uuid())
  gesId                String
  ges                  Ges           @relation(fields: [gesId], references: [id])
  riskAgentId          String
  riskAgent            RiskAgent     @relation(fields: [riskAgentId], references: [id])
  exposureType         ExposureType? 
  specificAgentDetails String?
  examBatteries        ExamBattery[]
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
}

// --------------------------------------
// Definición Médica
// --------------------------------------

enum EvaluationType {
  PRE_OCUPACIONAL
  OCUPACIONAL
  EXAMEN_SALIDA
}

model MedicalExam {
  id           String        @id @default(uuid())
  name         String        @unique
  batteryExams BatteryExam[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ExamBattery {
  id             String         @id @default(uuid())
  name           String
  evaluationType EvaluationType? 
  batteryExams   BatteryExam[]
  riskExposures  RiskExposure[]
  examOrders     ExamOrder[]    
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model BatteryExam {
  id            String      @id @default(uuid())
  examBatteryId String
  examBattery   ExamBattery @relation(fields: [examBatteryId], references: [id])
  medicalExamId String
  medicalExam   MedicalExam @relation(fields: [medicalExamId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  @@unique([examBatteryId, medicalExamId])
}

// --------------------------------------
// Operación
// --------------------------------------

enum UserRole {
  ADMIN_VITAM
  USER_COMPANY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Worker {
  id             String   @id @default(uuid())
  rut            String   @unique
  name           String
  phone          String?  
  position       String?  
  managementArea String?  
  
  currentGesId   String?
  currentGes     Ges?     @relation("CurrentGes", fields: [currentGesId], references: [id])
  companyId      String
  company        Company  @relation(fields: [companyId], references: [id])
  examOrders     ExamOrder[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum OrderStatus {
  SOLICITADO
  AGENDADO
  REALIZADO
  CERRADO
  ANULADO
}

model ExamOrder {
  id            String      @id @default(uuid())
  workerId      String
  worker        Worker      @relation(fields: [workerId], references: [id])
  companyId     String
  company       Company     @relation(fields: [companyId], references: [id])
  gesId         String
  ges           Ges         @relation(fields: [gesId], references: [id])
  
  examBatteries ExamBattery[] 
  
  status        OrderStatus @default(SOLICITADO)
  scheduledAt   DateTime?
  providerName  String?
  externalId    String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}