generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// Estructura Organizacional
// --------------------------------------

model Company {
  id           String       @id @default(uuid())
  rut          String       @unique
  name         String
  contactEmail String
  address      String?
  phone        String?
  workCenters  WorkCenter[]
  examOrders   ExamOrder[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model WorkCenter {
  id        String   @id @default(uuid())
  name      String
  address   String?
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  areas     Area[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Area {
  id           String     @id @default(uuid())
  name         String
  workCenterId String
  workCenter   WorkCenter @relation(fields: [workCenterId], references: [id])
  gesGroups    Ges[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model CostCenter {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --------------------------------------
// Núcleo GES (Grupos de Exposición Similar)
// --------------------------------------

model Ges {
  id               String         @id @default(uuid())
  name             String
  reportDate       DateTime
  reportNumber     String
  menCount         Int
  womenCount       Int
  tasksDescription String         @db.Text
  // New fields for fiscalization
  validityYears      Int?
  nextEvaluationDate DateTime?
  risksResume        String?
  prescriptions      String?
  
  areaId           String
  area             Area           @relation(fields: [areaId], references: [id])
  riskExposures    RiskExposure[]
  workers          Worker[]       @relation("CurrentGes")
  examOrders       ExamOrder[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model RiskAgent {
  id            String         @id @default(uuid())
  name          String         @unique
  riskExposures RiskExposure[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

enum ExposureType {
  ACUTE
  CHRONIC
  INTERMITTENT
}

model RiskExposure {
  id            String        @id @default(uuid())
  gesId         String
  ges           Ges           @relation(fields: [gesId], references: [id])
  riskAgentId   String
  riskAgent     RiskAgent     @relation(fields: [riskAgentId], references: [id])
  exposureType  ExposureType
  examBatteries ExamBattery[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

// --------------------------------------
// Definición Médica
// --------------------------------------

model MedicalExam {
  id           String        @id @default(uuid())
  name         String        @unique
  batteryExams BatteryExam[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ExamBattery {
  id            String         @id @default(uuid())
  name          String
  batteryExams  BatteryExam[]
  riskExposures RiskExposure[]
  examOrders    ExamOrder[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model BatteryExam {
  id            String      @id @default(uuid())
  examBatteryId String
  examBattery   ExamBattery @relation(fields: [examBatteryId], references: [id])
  medicalExamId String
  medicalExam   MedicalExam @relation(fields: [medicalExamId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([examBatteryId, medicalExamId])
}

// --------------------------------------
// Operación y Personas
// --------------------------------------

enum UserRole {
  ADMIN_VITAM
  USER_COMPANY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Worker {
  id          String      @id @default(uuid())
  rut         String      @unique
  name        String
  // New fields
  position       String
  managementArea String?
  
  currentGesId String?
  currentGes  Ges?        @relation("CurrentGes", fields: [currentGesId], references: [id])
  examOrders  ExamOrder[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum OrderStatus {
  SOLICITADO
  AGENDADO
  REALIZADO
  CERRADO
  ANULADO
}

model ExamOrder {
  id            String      @id @default(uuid())
  workerId      String
  worker        Worker      @relation(fields: [workerId], references: [id])
  companyId     String
  company       Company     @relation(fields: [companyId], references: [id])
  gesId         String
  ges           Ges         @relation(fields: [gesId], references: [id])
  examBatteryId String
  examBattery   ExamBattery @relation(fields: [examBatteryId], references: [id])
  status        OrderStatus @default(SOLICITADO)
  
  // Traceability
  scheduledAt   DateTime?
  providerName  String?
  externalId    String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
