generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id               String            @id @default(uuid())
  rut              String            @unique
  name             String
  contactEmail     String
  address          String?
  phone            String?
  workCenters      WorkCenter[]
  examOrders       ExamOrder[]
  workers          Worker[]
  users            User[]
  technicalReports TechnicalReport[]
  costCenters      CostCenter[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model WorkCenter {
  id        String   @id @default(uuid())
  name      String
  address   String?
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  areas     Area[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Area {
  id           String      @id @default(uuid())
  name         String
  workCenterId String
  workCenter   WorkCenter  @relation(fields: [workCenterId], references: [id])
  gesGroups    Ges[]
  costCenterId String?
  costCenter   CostCenter? @relation(fields: [costCenterId], references: [id])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model CostCenter {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  areas     Area[]
  workers   Worker[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TechnicalReport {
  id                  String               @id @default(uuid())
  reportNumber        String
  reportDate          DateTime
  pdfUrl              String
  companyId           String
  company             Company              @relation(fields: [companyId], references: [id])
  gesGroups           Ges[]
  quantitativeReports QuantitativeReport[]
  prescriptions       Prescription[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model QuantitativeReport {
  id                String          @id @default(uuid())
  name              String
  reportDate        DateTime
  pdfUrl            String
  technicalReportId String
  technicalReport   TechnicalReport @relation(fields: [technicalReportId], references: [id], onDelete: Cascade)
  prescriptions     Prescription[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model TmertReport {
  id          String   @id @default(uuid())
  name        String   // Ej: "Informe TMERT - Puesto Soldador"
  reportDate  DateTime
  pdfUrl      String?  // Link al PDF
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  gesId       String
  ges         Ges      @relation(fields: [gesId], references: [id], onDelete: Cascade)
  prescriptions Prescription[]
}

enum PrescriptionStatus {
  PENDIENTE
  EN_PROCESO
  REALIZADA
  VENCIDA
}

model Prescription {
  id                   String              @id @default(uuid())
  folio                String?
  description          String              @db.Text
  measureType          String?
  isImmediate          Boolean             @default(false)
  implementationDate   DateTime
  observation          String?             @db.Text
  status               PrescriptionStatus  @default(PENDIENTE)
  technicalReportId    String?
  technicalReport      TechnicalReport?    @relation(fields: [technicalReportId], references: [id], onDelete: Cascade)
  quantitativeReportId String?
  quantitativeReport   QuantitativeReport? @relation(fields: [quantitativeReportId], references: [id], onDelete: Cascade)
  tmertReportId        String?
  tmertReport          TmertReport? @relation(fields: [tmertReportId], references: [id])
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
}

model Ges {
  id                 String           @id @default(uuid())
  name               String
  reportDate         DateTime
  reportNumber       String
  menCount           Int
  womenCount         Int
  tasksDescription   String?          @db.Text
  machineryUsed      String?          @db.Text
  controlMeasures    String?          @db.Text
  subArea            String?
  validityYears      Int?
  nextEvaluationDate DateTime?
  risksResume        String?
  prescriptions      String?
  technicalReportId  String?
  technicalReport    TechnicalReport? @relation(fields: [technicalReportId], references: [id])
  tmertReports       TmertReport[]
  areaId             String
  area               Area             @relation(fields: [areaId], references: [id])
  riskExposures      RiskExposure[]
  workers            Worker[]         @relation("CurrentGes")
  examOrders         ExamOrder[]
  examBatteries      ExamBattery[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model RiskAgent {
  id            String         @id @default(uuid())
  name          String         @unique
  protocolUrl   String?
  protocols     RiskProtocol[]
  riskExposures RiskExposure[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model RiskProtocol {
  id          String    @id @default(uuid())
  name        String
  url         String
  riskAgentId String
  riskAgent   RiskAgent @relation(fields: [riskAgentId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
}

enum ExposureType {
  AGUDA
  CRONICA
  INTERMITENTE
  CONTINUA
}

model RiskExposure {
  id                   String        @id @default(uuid())
  gesId                String
  ges                  Ges           @relation(fields: [gesId], references: [id])
  riskAgentId          String
  riskAgent            RiskAgent     @relation(fields: [riskAgentId], references: [id])
  exposureType         ExposureType?
  specificAgentDetails String?
  examBatteries        ExamBattery[]
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
}

enum EvaluationType {
  PRE_OCUPACIONAL
  OCUPACIONAL
  EXAMEN_SALIDA
}

enum MedicalStatus {
  PENDIENTE
  APTO
  NO_APTO
  APTO_CON_OBSERVACIONES
}

model MedicalExam {
  id           String        @id @default(uuid())
  name         String        @unique
  batteryExams BatteryExam[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ExamBattery {
  id             String          @id @default(uuid())
  name           String
  evaluationType EvaluationType?
  batteryExams   BatteryExam[]
  riskExposures  RiskExposure[]
  orderBatteries OrderBattery[]
  rules          MedicalRule[]
  gesGroups      Ges[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model BatteryExam {
  id            String      @id @default(uuid())
  examBatteryId String
  examBattery   ExamBattery @relation(fields: [examBatteryId], references: [id])
  medicalExamId String
  medicalExam   MedicalExam @relation(fields: [medicalExamId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([examBatteryId, medicalExamId])
}

enum UserRole {
  ADMIN_VITAM
  USER_VITAM
  ADMIN_EMPRESA
  USER_EMPRESA
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Worker {
  id             String      @id @default(uuid())
  rut            String      @unique
  name           String
  email          String?
  phone          String?
  position       String?
  managementArea String?
  active         Boolean     @default(true)
  costCenterId    String?
  costCenter      CostCenter? @relation(fields: [costCenterId], references: [id])
  currentGesId   String?
  currentGes     Ges?        @relation("CurrentGes", fields: [currentGesId], references: [id])
  companyId      String
  company        Company     @relation(fields: [companyId], references: [id])
  employmentStatus EmploymentStatus @default(NOMINA)
  examOrders     ExamOrder[]
  events           WorkerEvent[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

enum OrderStatus {
  SOLICITADO
  AGENDADO
  REALIZADO
  CERRADO
  ANULADO
}

model OrderBattery {
  id        String      @id @default(uuid())
  orderId   String
  order     ExamOrder   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  batteryId String
  battery   ExamBattery @relation(fields: [batteryId], references: [id])

  status         MedicalStatus @default(PENDIENTE)
  expirationDate DateTime?
  resultUrl      String?

  // Campos nuevos FASE 3.0
  resultDate    DateTime?
  clinicalNotes String?   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExamOrder {
  id             String         @id @default(uuid())
  workerId       String
  worker         Worker         @relation(fields: [workerId], references: [id])
  companyId      String
  company        Company        @relation(fields: [companyId], references: [id])
  gesId          String
  ges            Ges            @relation(fields: [gesId], references: [id])
  orderBatteries OrderBattery[]
  status         OrderStatus    @default(SOLICITADO)
  evaluationType EvaluationType @default(OCUPACIONAL)
  scheduledAt    DateTime?
  providerName   String?
  externalId     String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model MedicalRule {
  id             String      @id @default(uuid())
  riskAgentName  String
  specificDetail String?
  batteryId      String
  battery        ExamBattery @relation(fields: [batteryId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}
enum EmploymentStatus {
  TRANSITO
  NOMINA
}

model WorkerEvent {
  id        String   @id @default(uuid())
  workerId  String
  worker    Worker   @relation(fields: [workerId], references: [id], onDelete: Cascade)
  
  eventType String   // Ej: 'CREACION', 'CAMBIO_ESTADO', 'CAMBIO_PUESTO'
  title     String   // Ej: 'Ingreso a NÃ³mina'
  details   String?  // Ej: 'Aprobado tras examen preocupacional'
  
  createdAt DateTime @default(now())
}